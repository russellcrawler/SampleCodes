@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="imagemFundo" style="z-index:-1;background-color: #FFF;">
    <img id="imagemFundo" src="~/assets/img/telaLogin/fundoLogin.jpg" style="background-repeat:no-repeat; position: absolute; left: 0px; top: 0px; width:100%; height:130%;" />

    <div class="login-wrapper" style="z-index: 1">
        <!-- Main Wrapper -->
        <div class="login-wrapper columns is-gapless">
            <!--Left Side (Desktop Only)-->
            <div class="column is-6 is-hidden-mobile hero-banner">
                <div class="hero is-fullheight is-login">
                    <div class="hero-body">
                        <div class="container">
                            <div class="left-caption">
                                <!--<h2>Junte-se a nós.</h2>-->
                                <img src="~/assets/img/telaLogin/Imagem Celular 1.png" />
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <!--Right Side-->
            <div class="column is-6">
                <div class="hero form-hero is-fullheight">
                    <!--Logo-->
                    @*<div class="logo-wrap">
                            <div class="wrap-inner">
                                <img src="../assets/img/logo/friendkit-white.svg" alt="">
                            </div>
                        </div>*@
                    <!--Login Form-->
                    <form method="post">
                        <div class="hero-body">
                            <div class="form-wrapper" style="position:relative;">
                                <!--Avatar-->

                                @*<div>
                                    <img src="~/assets/img/telaLogin/LogoLaranja.png" style="display:block; margin-left:auto; margin-right:auto" />

                                </div>*@

                                <div class="content-section">
                                    <img src="~/assets/img/telaLogin/LogoLaranja.png" style="display:block; margin-left:auto; margin-right:auto;width:400px;" />

                                    <p class="labelsLogin">Torne-se membro e faça dinheiro interagindo com seus seguidores!</p>

                                    <div class="field">
                                        <div class="control">
                                            <button type="submit" class="button is-solid primary-button raised is-rounded is-fullwidth">Cadastre-se com o Facebook</button>
                                        </div>
                                    </div>

                                    <!--Form-->
                                    <div class="login-form">
                                        <div class="field">
                                            <div class="control">
                                                <input class="input email-input" type="text" placeholder="Informe seu e-mail ou nome de usuário." id="Usuario" name="Usuario" value="">
                                                <div class="input-icon">
                                                    <i data-feather="user"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="field">
                                            <div class="control">
                                                <input class="input password-input" type="password" placeholder="Informe sua senha." id="Senha" name="Senha" value="">
                                                <div class="input-icon">
                                                    <i data-feather="lock"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div id="divNomeUsuario" class="field" style="display:none">
                                            <div class="control">
                                                <input class="input email-input" type="tel" placeholder="Informe seu nome." id="NovoUsuario" name="NovoUsuario" value="">
                                                <div class="input-icon">
                                                    <i data-feather="user"></i>
                                                </div>
                                            </div>
                                        </div>


                                        <div class="field" style="padding-bottom:0px;">
                                            <div class="control" style="text-align: center;">
                                                <span id="Mensagem" name="Mensagem" style="color:red; font-size:14px;text-align:center;">@Model.Mensagem</span>
                                            </div>
                                        </div>

                                        <hr style="margin-top:35px;" />

                                        <div style="padding-top:0px;">
                                            <input type="checkbox" /><label style="font-size:11px"> Ao clicar em "Cadastre-se", você declara que concorda com os <a href="#">Termos de Serviço</a> e <a href="/Privacy">Políticas de Privacidade</a>.</label>
                                        </div>


                                        <div class="field">
                                            @*<div class="control">
                <a href="/SignUp" class="button is-solid primary-button raised is-rounded is-fullwidth">Cadastre-se</a>
            </div>*@

                                            <div class="section forgot-password">
                                                <div class="has-text-centered">
                                                    <a href="/RedefinePassword">Esqueceu a senha?</a>

                                                    <a href="#" onclick="$('form').submit()" class="button is-solid primary-button raised is-rounded is-fullwidth">Entrar</a>
                                                </div>
                                            </div>

                                            <p class="labelsLogin">Ainda não é membro?</p>

                                        </div>
                                    </div>
                                    <div class="control" style="text-align:center">
                                        <a @*href="/SignUp"*@ style="color:#ff4e56; font-weight:bold" onclick="$('#divNomeUsuario').show(); $('#Usuario').val('').attr('placeholder', 'Informe seu e-mail.'); $('#Senha').val(''); $('#Mensagem').hide()">Seja membro agora!</a>
                                    </div>
                                    <br />
                                    <div class="control" style="color:gray !important;text-align:center;">
                                        <span>&copy;@DateTime.Now.Year Privacy</span>&nbsp;<span style="font-size:12px;">&#9679;</span>
                                        <a href="http://blog.privacy.com.br/" style="color:gray !important;">Blog</a>&nbsp;<span style="font-size:12px;">&#9679;</span>
                                        <a href="https://twitter.com/privacyseja/" target="_blank"  style="color:gray !important;">Twitter</a>&nbsp;<span style="font-size:12px;">&#9679;</span>
                                        <a href="https://www.instagram.com/sejaprivacy" target="_blank" style="color:gray !important;">Instagram</a>&nbsp;
                                    </div>
                                    <br />
                                    <div class="control" style="color:gray !important;text-align:center;">
                                        <a href="/Faq" style="color:gray !important;">FAQs</a>&nbsp;<span style="font-size:12px;">&#9679;</span>
                                        <a href="#" style="color:gray !important;">Termo</a>&nbsp;<span style="font-size:12px;">&#9679;</span>
                                        <a href="/Privacy" style="color:gray !important;">Privacidade</a>&nbsp;<span style="font-size:12px;">&#9679;</span>
                                        <a href="mailto:contato@privacy.com.br,atendimento@privacy.com.br" style="color:gray !important;">Contato</a>&nbsp;<span style="font-size:12px;">&#9679;</span>
                                        <a href="/HowItWorks" style="color:gray !important;">Como funciona</a>&nbsp;
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
